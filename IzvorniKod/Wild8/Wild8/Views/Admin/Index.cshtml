@model Employee

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Admin page</title>
    <meta charset="utf-8" />
    <link rel="shortcut icon" href="~/images/favicon.png">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script type="text/javascript" src="~/Scripts/ViewScripts/Admin_View_Scripts/admin_view.js"></script>
    <style>
        .col-fixed {
            width: 200px;
            position: fixed;
            height: 100%;
        }
        .nav-pills {
            text-align: center;
            position: absolute;
            bottom: 0;
            top: 0;
            left: 0;
            right: 0;
        }
        .col-fluid {
            margin-top: 15px;
            margin-left: 200px;
        }

        .logout-btn {
            width: 100%;
            position:absolute;
            bottom: 0;
        }
        .logout-btn button {
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-fixed">
                <ul class="nav nav-tabs nav-pills nav-stacked">
                    <li><h3>Wild 8</h3></li>
                    <li><h4>@if (Model.AdminRights)
                    {
                        @("Vlasnik" + Model.FirstName)
                    }
                    else
                    {
                        @("Dijelatnik" + Model.FirstName)
                    }</h4></li>
                    <li class="active" data-toggle="tab" id="orders-menu" data-url="@Url.Action("Orders", "Admin")"><a>Narudžbe</a></li>
                    <li data-toggle="tab" id="meal-menu" data-url="@Url.Action("AddEditDelMenu", "Admin")"><a>Jela</a></li>
                    @if (Model.AdminRights)
                    {
                        <li data-toggle="tab" id="statistic-menu" data-url="@Url.Action("Statistic", "Admin")"><a>Statistika</a></li>
                        <li data-toggle="tab" id="workers-menu" data-url="@Url.Action("AddRemoveUserPartial", "Admin")"><a>Dijelatnici</a></li>
                        <li data-toggle="tab" id="static-info-menu" data-url="@Url.Action("StaticInfo","Admin")">Wild8 info</li>
                    }
                </ul>
                <div class="logout-btn" >
                    <button class="btn btn-primary" id="logout" data-toggle="tab" data-url="@Url.Action("Logout", "Admin")" data-index-url="@Url.Action("Index", "Index")">
                        Odjava
                    </button>
                </div>
            </div>
            <div class="container-fluid col-fluid main-content">
                @{ 
                    Html.RenderAction("Orders", "Admin");
                }
            </div>
        </div>
    </div>
</body>
</html>