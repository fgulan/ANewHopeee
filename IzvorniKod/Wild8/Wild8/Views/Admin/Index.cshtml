@model Employee

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Admin page</title>
    <meta charset="utf-8" />
    <link rel="shortcut icon" href="~/images/favicon.png">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

    <style>
        .col-fixed {
            width: 200px;
            position: fixed;
            height: 100%;
        }

        .col-fluid {
            margin-left: 200px;
            position: fixed;
            height: 100%;
            width: 100%;
        }

        .nav-pills {
            text-align: center;
            position: absolute;
            bottom: 0;
            top: 0;
            left: 0;
            right: 0;
        }

        .logout {
            position: absolute;
            bottom: 0;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-fixed">
                <ul class="nav nav-tabs nav-pills nav-stacked">
                    <li><h3>Wild 8</h3></li>
                    <li><h4>@if (Model.AdminRights)
                    {
                        @("Vlasnik" + Model.FirstName)
                    }   
                    else
                    {
                        @("Dijelatnik" + Model.FirstName)
                    }</h4></li>
                    <li class="active" data-toggle="tab"><a href="#"> Narud≈æbe</a></li>
                    <li data-toggle="tab"><a href="#"> Jela</a></li>
                    <li data-toggle="tab"><a href="#"> Statistika</a></li>
                    <li data-toggle="tab"><a href="#"> Dijelatnici</a></li>
                    <li class="logout" data-toggle="tab"><a href="#"> Odjava</a></li>
                </ul>
            </div>
            <div class="container-fluid col-fluid main-content">
                <h1>Content</h1>
            </div>
        </div>
    </div>
</body>
</html>