@model Wild8.Models.OrderInfo

<!DOCTYPE html>
<meta charset="utf-8">
<html>
    <body style="font-family: sans-serif;">
        <div style="font-size: 12pt;">@Html.DisplayFor(model => model.Info.RestaurauntName), @Html.DisplayFor(model => model.Info.OwnerAddress), @Html.DisplayFor(model => model.Info.OwnerCity)</div><br>
        <div style="font-size: 30pt; border-bottom: solid 1px darkgray;">Potvrda o narudžbi</div>
        <br>
        <p style="font-size: 18pt;"><i>Okvirno vrijeme dostave: @Html.DisplayFor(model => model.Order.DeliveryTime)</i></p>

        <div style="font-size: 25pt;">Sadržaj narudžbe:</div><br>

        <table style="width: 100%; border-spacing: 0px;">
            <tr>
                <td style="border-bottom: solid 1px black;">Naziv</td>
                <td style="border-bottom: solid 1px black;">Količina</td>
                <td style="border-bottom: solid 1px black; text-align: right;">Ukupan Iznos</td>
            </tr>
            @{bool lightColor = true; }
            @foreach (var details in Model.Order.OrderDetails)
            {
                if (lightColor)
                {
                    <tr style="background-color: lightgray;">
                        <td>@(details.MealName)</td>
                        <td>@(details.Count)</td>
                        <td style="text-align: right;">@((details.Price * details.Count).ToString()) kn</td>
                    </tr>
                }
                else
                {
                    <tr style="background-color: darkgray;">
                        <td>@(details.MealName)</td>
                        <td>@(details.Count)</td>
                        <td style="text-align: right;">@((details.Price * details.Count).ToString()) kn</td>
                    </tr>
                }

                lightColor = !lightColor;

                foreach (var addon in details.OrderMealAddOns)
                {
                    if (lightColor)
                    {
                        <tr style="background-color: lightgray;">
                            <td>+ @(addon.AddOnName)</td>
                            <td>1</td>
                            <td style="text-align: right;">@(addon.Price) kn</td>
                        </tr>
                    }
                    else
                    {
                        <tr style="background-color: darkgray;">
                            <td>+ @(addon.AddOnName)</td>
                            <td>1</td>
                            <td style="text-align: right;">@(addon.Price) kn</td>
                        </tr>
                    }

                    lightColor = !lightColor;
                }
            }
        </table>

        <h3>Ukupno: @Html.DisplayFor(model => model.Order.TotalPrice) kn</h3>
        <h3>Način plaćanja: Gotovina (dostavljaču)</h3>

        <p><i>Napomena restoranu: @Html.DisplayFor(model => model.Order.Annotation)</i></p>
        <br>
        <p style="font-size: 15pt;">Adresa za dostavu:</p>
        @Html.DisplayFor(model => model.Order.City), @Html.DisplayFor(model => model.Order.PostCode)<br>
        @Html.DisplayFor(model => model.Order.Address)<br>
        <br>
        <p style="font-size: 15pt;">Kontakt s restoranom:</p>
        @Html.DisplayFor(model => model.Info.OwnerPhone)
    </body>
</html>
