@model AddEditMealModelView
@{ 
    Layout = null;
}
<div class="container-fluid" id="add-meal-form">
    @using (Html.BeginForm("AddMeal", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="container-fluid">
            <div class="form-horizontal">
                <div class="row">
                    <div class="col-sm-8">
                        <div class="form-group">
                            @Html.Label("Ime:", new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Meal.Name, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Opis:", new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Meal.Description, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Kategorija:", new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(m => m.Meal.CategoryID,
                                new SelectList(Model.Categories, "CategoryID", "Name", Model.SelectedCategory),
                                new { id = "CategoryID", @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Dodaci:", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.ListBoxFor(x => x.SelectedAddOns, new MultiSelectList(Model.AddOns, "AddOnID", "AddOnID"), htmlAttributes: new { @class = "form-control", size = 5 })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">Vrste:</label>
                            <div class="controls col-md-10">
                                <div id="MealTypes" class="MealTypes">
                                    <div class="MealType">
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon">Vrsta</span>
                                                <input class="form-control" type="text" name="MealType" placeholder="Vrsta" required>
                                                <span class="input-group-addon">Cijena</span>
                                                <input class="form-control" type="number" step="0.01" min="0" max="99" name="Price" placeholder="Cijena" required>
                                                <span class="input-group-btn">
                                                    <button type="button" class="delete btn btn-default">
                                                        <span class="glyphicon glyphicon-remove" style="color:darkred" aria-hidden="true"></span>
                                                    </button>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group controls col-md-10">
                            <button type="button" class="btn btn-default" onclick="AddMealTypeInput()">
                                <span class="glyphicon glyphicon-plus" style="color:black" aria-hidden="true"></span>
                            </button>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="form-group">
                            @Html.Label("Slika:", new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <label class="control-label">Odaberite sliku</label>
                                <input id="input-20" type="file" name="upload">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-lg-offset-0 col-md-6 col-lg-6">
                        <input class="btn btn-lg btn-success btn-block" type="submit" value="Save">
                    </div>
                </div>
            </div>
        </div>
    }

    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-fileinput/css/fileinput.min.css" />
    <script type="text/javascript" src="~/Scripts/fileinput.min.js"></script>
    <script>
        $(document).ready(function () {
            $(document).on('click', '.delete', function (e) {

                if ($('.MealType').length == 1) return;
                $(this).closest('.MealType').fadeOut('fast', function () {
                    $(this).remove();
                });;
            });
        });
        $("#input-20").fileinput({
            browseClass: "btn btn-primary btn-block",
            showCaption: false,
            showRemove: false,
            showUpload: false
        });
        function AddMealTypeInput() {
            var f = document.getElementsByClassName('MealType')[0].cloneNode(true).outerHTML;
            $(f).hide().appendTo($("#MealTypes")).fadeIn(600);
        }
    </script>
</div>