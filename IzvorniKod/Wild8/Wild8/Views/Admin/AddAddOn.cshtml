
<div class="container-fluid" id="add-addon-form">
    @using (Html.BeginForm("AddAddOn", "Admin", FormMethod.Post))
    {
        <div class="form-horizontal">

            <div class="form-group">
                @Html.Label("Ime:", new { @class = "control-label col-md-2" })
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="Name" placeholder="Ime" required>
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Cijena:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-sm-10">
                    <input class="form-control" type="number" step="0.01" min="0" max="99" name="Price" placeholder="Cijena" required>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2"></label>
                <div class="text-center col-sm-10">
                    <button type="submit" name="singlebutton" class="btn btn-lg btn-success">Spremi</button>
                </div>
            </div>
        </div>
    }
    <script type="text/javascript" src="~/Scripts/ViewScripts/Admin_View_Scripts/AddAddOnScript.js"></script>
</div>
