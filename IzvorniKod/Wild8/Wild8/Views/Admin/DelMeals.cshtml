@model IEnumerable<Meal>

@{
    Layout = null;
}
<div class="container-fluid" id="del-meal-list">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>Popis jela</h3>
        </div>
        <div class="panel-body">
            <div class="list-group">
                @foreach (var item in Model)
                {
                    <button type="button" class="list-group-item del-meal-btn" data-url="@Url.Action("DeleteMeal","Admin")" data-meal-id="@item.MealID" data-meal-name="@item.Name">
                        <span class="glyphicon glyphicon-remove pull-right" style="color:orangered;font-size:1.2em;"></span>
                        @item.Name
                    </button>
                }
            </div>
        </div>
    </div>
    <div class="modal fade" id="delete-modal" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-warning">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <span class="glyphicon glyphicon-remove"></span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Upozorenje</h4>
                </div>
                <div class="modal-body">
                    <h3>Jeste li sigurni da želite obrisati: </h3>
                    <br />
                    <h4 id="modal-meal-label"></h4>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Odustani</button>
                    <button type="button" class="btn btn-primary" id="modal-del-btn">Izbriši jelo</button>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="~/Scripts/ViewScripts/Admin_View_Scripts/DelMealsScript.js"></script>
</div>